<?xml version='1.0' encoding='utf-8'?> 
<Context displayName="wime" docBase="wime" path="/wime" reloadable="true">
  <!--                     MySQL                   -->
  <Resource name="jdbc/WIME" type="javax.sql.DataSource"
      username="root" password="password"
      driverClassName="com.mysql.jdbc.Driver"
      url="jdbc:mysql://localhost:3306/Wime"
      connectionProperties="useUnicode=yes;characterEncoding=utf8;"
      maxActive="8"
      maxIdle="4"
      maxWait="5000"
  />  
</Context>
